{
  "name": "docintent",
  "private": true,
  "version": "0.0.1",
  "description": "An open-source Apex document intent engine for deterministic PDF generation on Salesforce.",
  "scripts": {
    "prettier": "prettier --write \"**/*.{cls,cmp,component,css,html,json,md,page,trigger,xml,yaml,yml}\"",
    "prettier:verify": "prettier --check \"**/*.{cls,cmp,component,css,html,json,md,page,trigger,xml,yaml,yml}\"",
    "postinstall": "husky install",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^3.2.2",
    "husky": "^9.1.5",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "prettier-plugin-apex": "^2.0.1"
  },
  "lint-staged": {
    "**/*.{cls,cmp,component,css,html,json,md,page,trigger,xml,yaml,yml}": [
      "prettier --write"
    ]
  }
}
